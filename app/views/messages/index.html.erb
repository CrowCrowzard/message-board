<div class="panel panel-default">
    <h3 class="panel-heading">
        メッセージ一覧
    </h3>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            名前：<span class="label label-info"><%= message.name%></span>
            (<%= link_to "edit", edit_message_path(message) %>,
            <%= link_to "destroy", message, method: :delete, data: { confirm: '削除してもよろしいですか？' } %>)<br>
            年齢：<%= message.age %>歳<br>
            内容：<%= message.body %>
            <br><br>
            <% end %>
    </div>
</div>

<br><br><br>

<div class="row">
    <div class="icon col-sm-1 hidden-xs">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </div>
    <div class="content col-sm-11">
        <h3>メッセージ投稿フォーム</h3>
    </div>
</div>

<% # 部分テンプレートを読み込んでいる %>
<%= render 'form' %>
